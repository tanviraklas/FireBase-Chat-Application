<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.onairtrainee.chatapplicationdemo.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_visit_user_image"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/default_pro_pic" />

    <TextView
        android:id="@+id/profile_visit_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_visit_user_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="User Name"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_visit_userStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_visit_userName"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="User Status"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <Button
        android:id="@+id/profile_visit_send_request_btn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_visit_request_decline_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_green_light"
        android:text="Send Friend Request"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/profile_visit_request_decline_btn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/profile_visit_send_request_btn"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary"
        android:text="Decline Friend Request"
        android:textColor="@android:color/background_light" />


</RelativeLayout>
